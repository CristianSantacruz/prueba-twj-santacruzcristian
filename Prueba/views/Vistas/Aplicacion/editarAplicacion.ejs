<div style='background-color:white;color:black;'>
  <h1>Editar Aplicaciones</h1>

  <div class="row">
    <div class="col-sm-8">
      <form action="aplicacion/editarAplicacion" method="post">
        <div class="form-group">
          <label>Nombre</label>
          <input required type="text" class="form-control" placeholder="Nombre" name="nombre" value="<%= aplicacion.nombre %>">
        </div>

        <div class="form-group">
          <label>Versión</label>
          <input type="integer" class="form-control" placeholder="Versión" name="version" value="<%= aplicacion.version%>">
        </div>

        <div class="form-group">
          <label>Tamaño</label>
          <input type="integer" class="form-control" placeholder="Tamaño" name="tamaño" value="<%= aplicacion.tamaño%>">
        </div>

        <input type="hidden" name="id" value="<%=aplicacion.id%>">
        <button type="submit" class="btn btn-success">Editar Aplicacion</button>

      </form>
    </div>
    <div class="col-sm-4">
      <h3 class="text-center"> ID: <%=aplicacion.id%> -  <%=aplicacion.nombre%></h3>
      <h4 class="text-center"> Versión: <%=aplicacion.version%></h4>
      <h4 class="text-center"> Tamaño: <%=aplicacion.tamaño%> MB</h4>
      <p class="text-center"></p>
    </div>
  </div>
</div>
