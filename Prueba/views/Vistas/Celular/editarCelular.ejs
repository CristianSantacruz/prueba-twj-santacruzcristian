<div style='background-color:white;color:black;'>

  <h1>Editar Celulares</h1>

  <div class="row">
    <div class="col-sm-8">
      <form action="celular/editarCelular" method="post">
        <div class="form-group">
          <label>Nombre</label>
          <input disabled type="text" class="form-control" placeholder="Nombre" name="nombre" value="<%= celular.nombre %>">
        </div>

        <div class="form-group">
          <label>Sistema Operativo</label>
          <input type="text" class="form-control" placeholder="Sistema Operativo" name="sistemaOperativo" value="<%= celular.sistemaOperativo%>">
        </div>

        <div class="form-group">
          <label>Versión</label>
          <input type="integer" class="form-control" placeholder="Versión" name="version" value="<%= celular.version%>">
        </div>

        <input type="hidden" name="id" value="<%=celular.id%>">
        <button type="submit" class="btn btn-success">Editar Celular</button>

      </form>
    </div>
    <div class="col-sm-4">
      <h3 class="text-center"> <%=celular.nombre%></h3>
      <h4 class="text-center"> Sistema Operativo: <%=celular.sistemaOperativo%></h4>
      <h4 class="text-center"> Versión: <%=celular.version%></h4>
    </div>
  </div>
</div>
